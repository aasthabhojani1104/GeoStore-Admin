@model PagedResult<Country_Store.Models.CityModel>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <!-- 🔍 Header + Search -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">🏙️ City List</h2>

                <div class="input-group w-50">
                    <input type="text" id="citySearch" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="🔍 Search cities..." />
                   
                </div>
            </div>

            <!-- 🏙️ City Table -->
            <div id="cityListContainer">
                <table class="table table-bordered table-striped table-hover shadow-sm">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>City Name</th>
                            <th>Pin Code</th>
                            <th>Population</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            int i = (Model.CurrentPage - 1) * Model.PageSize + 1;
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td>@item.CityName</td>
                                    <td>@item.PinCode</td>
                                    <td>@item.Population</td>
                                    <td>@item.StateName</td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No cities found.</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- 📄 Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == 1 ? "disabled" : "")"
                           href="@Url.Action("List", "City", new { page = Model.CurrentPage - 1, search = ViewBag.Search })">
                            ⬅️ Previous
                        </a>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                @for (int p = 1; p <= Model.TotalPages; p++)
                                {
                                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("List", "City", new { page = p, search = ViewBag.Search })">@p</a>
                                    </li>
                                }
                            </ul>
                        </nav>

                        <a class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                           href="@Url.Action("List", "City", new { page = Model.CurrentPage + 1, search = ViewBag.Search })">
                            Next ➡️
                        </a>
                    </div>
                }

                <!-- ℹ️ Page Summary -->
                <div class="text-end text-muted mt-2">
                    Showing page @Model.CurrentPage of @Model.TotalPages | Total cities: <strong>@Model.TotalItems</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let typingTimer;
        const debounceDelay = 300;

        $(document).ready(function () {

            $(document).on('keyup', '#citySearch', function () {
                clearTimeout(typingTimer);
                const searchValue = $(this).val();

                typingTimer = setTimeout(() => {
                    $.get("/City/List", { page: 1, search: searchValue }, function (html) {
                        $('#cityListContainer').html($(html).find('#cityListContainer').html());
                    });
                }, debounceDelay);
            });

            $(document).on('click', '.pagination .page-link', function (e) {
                e.preventDefault();
                const url = $(this).attr('href');
                if (url) {
                    $.get(url, function (html) {
                        $('#cityListContainer').html($(html).find('#cityListContainer').html());
                    });
                }
            });
        });

        function searchCity() {
            const search = document.getElementById("citySearch").value;
            $.get("/City/List", { page: 1, search }, function (html) {
                $('#cityListContainer').html($(html).find('#cityListContainer').html());
            });
        }

        function cancelCitySearch() {
            document.getElementById("citySearch").value = "";
            $.get("/City/List", { page: 1 }, function (html) {
                $('#cityListContainer').html($(html).find('#cityListContainer').html());
            });
        }

        setTimeout(() => {
            const msg = document.getElementById("tempMessage");
            if (msg) msg.style.display = "none";
        }, 4000);
    </script>
}
