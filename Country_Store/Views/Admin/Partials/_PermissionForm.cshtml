    <div class="py-4">
        <h2 class="text-primary text-center mb-4">🔐 Assign Permissions</h2>

        <!-- Dropdown -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <label class="form-label fw-bold fs-5">👤 Select User</label>
                <select id="SelectedUserId"
                        asp-items="Model.UserList"
                        class="form-select form-select-lg fs-5 shadow-sm"
                        style="height: 60px;">
                    <option value="">-- 👥 Select User --</option>
                </select>
            </div>
        </div>

        <!-- Checkbox area -->
        <div id="permissionFormContainer" class="mt-4"></div>
    </div>
</div>
