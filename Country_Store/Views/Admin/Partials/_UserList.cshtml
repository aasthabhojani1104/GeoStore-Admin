@model Country_Store.Models.PagedResult<Country_Store.Models.UserModel>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2 text-center" id="tempMessage" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-primary mb-0">👤 User List</h3>
            </div>
            <div class="input-group mb-3">
                <input type="text" id="userSearch" class="form-control" placeholder="🔍 Search users..." value="@ViewBag.Search" />
            
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Role</th>
                            <th>Is Active</th>
                            <th>Permissions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Items.Any())
                        {
                            int i = (Model.CurrentPage - 1) * Model.PageSize + 1;
                            foreach (var user in Model.Items)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@user.Username</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Role</td>
                                    <td>
                                        <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.AssignedPermissions != null && user.AssignedPermissions.Any())
                                        {
                                            @string.Join(", ", user.AssignedPermissions)
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="javascript:void(0);" onclick="reloadUserForm(@user.UserId)" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this user?');" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="text-end text-muted mb-2">
                    Showing page @Model.CurrentPage of @Model.TotalPages | Total users: <strong>@Model.TotalItems</strong>
                </div>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="User pagination" class="mt-4">
                    <ul class="pagination justify-content-center pagination-sm">
                        <!-- ◀️ Previous Button -->
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="javascript:void(0);" onclick="loadUserPage(@(Model.CurrentPage - 1))">
                                ⬅️ Previous
                            </a>
                        </li>

                        <!-- Page Numbers -->
                        @for (int p = 1; p <= Model.TotalPages; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="javascript:void(0);" onclick="loadUserPage(@p)">
                                    @p
                                </a>
                            </li>
                        }

                        <!-- ▶️ Next Button -->
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="javascript:void(0);" onclick="loadUserPage(@(Model.CurrentPage + 1))">
                                Next ➡️
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => {
            const message = document.getElementById("tempMessage");
            if (message) message.style.display = "none";
        }, 3000);

       
    </script>
}
