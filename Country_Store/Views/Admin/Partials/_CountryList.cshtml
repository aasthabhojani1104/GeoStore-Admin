@model Country_Store.Models.PagedResult<Country_Store.Models.CountryModel>





@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2 text-center"
         id="tempMessage"
         style="background-color: #d1e7dd !important; color: #0f5132 !important; border: 1px solid #badbcc !important;">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-primary mb-0">🌍 Country List</h3>
            </div>

            <!-- 🔍 Search Bar -->
            <div class="input-group mb-3">
                <input type="text" id="countrySearch" class="form-control" placeholder="🔍 Search countries..." value="@ViewBag.Search" />
             
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Country Name</th>
                            <th>Code</th>
                            <th>Continent</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Items.Any())
                        {
                            int i = (Model.CurrentPage - 1) * Model.PageSize + 1;
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.CountryName</td>
                                    <td>@item.CountryCode</td>
                                    <td>@item.Continent</td>
                                    <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1" onclick="reloadCountryForm(@item.CountryId)">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <a asp-controller="Admin" asp-action="DeleteCountry" asp-route-id="@item.CountryId" class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this country?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-muted">No countries found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-end text-muted mb-2">
                    Showing page @Model.CurrentPage of @Model.TotalPages | Total countries: <strong>@Model.TotalItems</strong>
                </div>
            </div>
        </div>

        <!-- ✅ Pagination Footer -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <!-- ◀️ Previous Button -->
                    <button class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == 1 ? "disabled" : "")"
                            onclick="loadCountryPage(@(Model.CurrentPage - 1))">
                        ⬅️ Previous
                    </button>

                    <!-- Page Numbers -->
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            @for (int p = 1; p <= Model.TotalPages; p++)
                            {
                                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="javascript:void(0);" onclick="loadCountryPage(@p)">
                                        @p
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>

                    <!-- ▶️ Next Button -->
                    <button class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                            onclick="loadCountryPage(@(Model.CurrentPage + 1))">
                        Next ➡️
                    </button>
                </div>
            </div>
        }
    </div>
</div>





@section Scripts {
    <script>
        // Auto fade out message
        setTimeout(() => {
            const msg = document.getElementById("tempMessage");
            if (msg) msg.style.display = "none";
        }, 3000);

       
    </script>
}
