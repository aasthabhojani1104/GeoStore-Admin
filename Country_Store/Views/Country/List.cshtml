@model PagedResult<Country_Store.Models.CountryModel>
@{
    ViewBag.Title = "Country List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-primary">🌍 Country List</h3>

                <div class="input-group w-50">
                    <input type="text" id="countrySearch" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="🔍 Search countries..." />
                 
                </div>
            </div>

            <div id="countryListContainer">
                <table class="table table-bordered table-striped table-hover shadow-sm">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Country Name</th>
                            <th>Code</th>
                            <th>Continent</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Items.Any())
                        {
                            int i = (Model.CurrentPage - 1) * Model.PageSize + 1;
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td>@item.CountryName</td>
                                    <td>@item.CountryCode</td>
                                    <td>@item.Continent</td>
                                    <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No countries found.</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == 1 ? "disabled" : "")"
                           href="@Url.Action("List", "Country", new { page = Model.CurrentPage - 1, search = ViewBag.Search })">
                            ⬅️ Previous
                        </a>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                @for (int p = 1; p <= Model.TotalPages; p++)
                                {
                                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("List", "Country", new { page = p, search = ViewBag.Search })">@p</a>
                                    </li>
                                }
                            </ul>
                        </nav>

                        <a class="btn btn-outline-secondary btn-sm @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                           href="@Url.Action("List", "Country", new { page = Model.CurrentPage + 1, search = ViewBag.Search })">
                            Next ➡️
                        </a>
                    </div>
                }

                <div class="text-end text-muted mt-2">
                    Showing page @Model.CurrentPage of @Model.TotalPages | Total countries: <strong>@Model.TotalItems</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let typingTimer;
        const debounceDelay = 300;

        $(document).ready(function () {
        

            $(document).on('keyup', '#countrySearch', function () {
                clearTimeout(typingTimer);
                const searchValue = $(this).val();

                typingTimer = setTimeout(() => {
                    console.log("🔍 Instant Search:", searchValue);
                    $.get("/Country/List", { page: 1, search: searchValue }, function (html) {
                        $('#countryListContainer').html($(html).find('#countryListContainer').html());
                    });
                }, debounceDelay);
            });

            $(document).on('click', '.pagination .page-link', function (e) {
                e.preventDefault();
                const url = $(this).attr('href');
                if (url) {
                    $.get(url, function (html) {
                        $('#countryListContainer').html($(html).find('#countryListContainer').html());
                    });
                }
            });
        });

        function searchCountry() {
            const search = document.getElementById("countrySearch").value;
            $.get("/Country/List", { page: 1, search }, function (html) {
                $('#countryListContainer').html($(html).find('#countryListContainer').html());
            });
        }

        function cancelCountrySearch() {
            document.getElementById("countrySearch").value = "";
            $.get("/Country/List", { page: 1 }, function (html) {
                $('#countryListContainer').html($(html).find('#countryListContainer').html());
            });
        }

        // Hide temp message (if any)
        setTimeout(() => {
            const msg = document.getElementById("tempMessage");
            if (msg) msg.style.display = "none";
        }, 4000);
    </script>
}
