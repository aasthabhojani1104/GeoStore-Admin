@model IEnumerable<Country_Store.Models.CountryModel>

@{
    ViewBag.Title = "Country List";
}
@if (TempData["Message"] != null)
{
    <div id="tempMessage" class="alert alert-success text-center">
        @TempData["Message"]
    </div>


}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">Country List</h2>
               @*  <a asp-action="
" class="btn btn-success">
                    <i class="bi bi-plus-lg"></i> Add New Country
                </a> *@
            </div>

            <table class="table table-bordered table-striped table-hover shadow-sm">
                <thead class="table-primary text-center">
                    <tr>
                        <th>#</th>
                        <th>Country Name</th>
                        <th>Code</th>
                        <th>Continent</th>
                        <th>Created Date</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                                    <tr>
                                        <td class="text-center">@i</td>
                                        <td>@item.CountryName</td>
                                        <td>@item.CountryCode</td>
                                        <td>@item.Continent</td>
                                        <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                       @*  <td class="text-center">
                                            <a asp-action="AddOrEdit" asp-route-id="@item.CountryId" class="btn btn-sm btn-primary me-2">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CountryId" class="btn btn-sm btn-danger"
                                               onclick="return confirm('Are you sure you want to delete this country?');">
                                                <i class="bi bi-trash3"></i> Delete
                                            </a>
                                        </td> *@
                                    </tr>
                            i++;
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No countries found.</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        setTimeout(function () {
            var msg = document.getElementById("tempMessage");
            if (msg) {
                msg.style.display = "none";
            }
        }, 4000); // 4 seconds
    </script>
}